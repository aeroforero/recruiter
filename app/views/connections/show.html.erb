<div class="page-header">
  <h3>Connection #<%= @connection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>First name</dt>
      <dd><%= @connection.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @connection.last_name %></dd>

      <dt>Company</dt>
      <dd><%= @connection.company %></dd>

      <dt>Phone</dt>
      <dd><%= @connection.phone %></dd>

      <dt>Email</dt>
      <dd><%= @connection.email %></dd>

      <dt>Birthdate</dt>
      <dd><%= @connection.birthdate %></dd>

      <dt>Linkedin</dt>
      <dd><%= @connection.linkedin %></dd>

      <dt>User</dt>
      <dd><%= @connection.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/connections" class="btn btn-primary">
        Back
      </a>
      <a href="/connections/<%= @connection.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_connection/<%= @connection.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
